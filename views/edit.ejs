<%- layout("/layout/biolet.ejs")%>

<div class="row">
    <div class="col-8 offset-2">
<br>
    <h1>Edit your List</h1>
    <form method="POST" action="/listing/<%= listing.id %>?_method=PUT" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-label">title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
            <div class="valid-feedback">title looks good</div>
       </div>

       <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea type="text" class="form-control"  name="listing[description]" required><%= listing.description  %></textarea>
            <div class="invalid-feedback">make short description</div>
       </div>

       <div class="mb-3">
            <label for="image" class="form-label">image link</label>
            <input type="text" class="form-control" name="listing[image]" required value="<%= listing.image %>">
            <div class="invalid-feedback">Enter a valid link</div>
       </div>

      <div class="row">
        <div class="mb-3 col-4">
            <label for="price" class="form-label">price</label>
            <input type="number" class="form-control" name="listing[price]" required value="<%= listing.price %>">
            <div class="invalid-feedback">price should positive</div>
       </div>

       <div class="mb-3 col-8">
            <label for="location" class="form-label">location</label>
            <input type="text" class="form-control"  name="listing[location]" required value="<%= listing.location %>">
            <div class="invalid-feedback">Enter correct location</div>
       </div>
      </div>

       <div class="mb-3">
        <label for="country" class="form-label">country</label>
        <input type="text" class="form-control" name="listing[country]" required value="<%= listing.country %>">
        <div class="invalid-feedback">Select include country</div>
       </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>

    </form>
    </div>
</div>
<script src="/js/app.js"></script>