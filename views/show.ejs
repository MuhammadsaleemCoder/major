<%- layout("/layout/biolet.ejs") %>

<div class="row mb-3">
  <div class="col-8 offset-2">

    <div class="card listing-card">
      <div class="row">
        <div class="col-10 offset-2">
          <h1><b><%= listing.title %></b></h1>
          <img src="<%= listing.image %>" class="card-img-top show-image" alt="image">
          <div class="card-body">
            <p class="card-text"><br>
              <i>Owner: <%= listing.owner ? listing.owner.username : "Unknown" %></i><br>
              <%= listing.description %><br>
              Rs: <%= listing.price %><br>
              <%= listing.location %><br>
              <%= listing.country %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-10 offset-2">
      <% if (currUser) { %>
        <h4>Leave a Review</h4>
        <form action="/listing/<%= listing._id %>/review" method="POST" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <label for="rating">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]">
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="6" class="form-control" required></textarea>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
      <% } %>
    </div>

    <% if (currUser && listing.owner && !listing.owner._id.equals(currUser._id)) { %>

      <div class="btns mt-4">
        <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-2">Edit</a>
        <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark mt-2 offset-4">Delete</button>
        </form>
      </div>
    <% } %>

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for (let review of listing.reviews) { %>
        <div class="card col-5 ms-3 mt-3">
          <div class="card-body">
            <h4 class="card-title"><%= review.author ? review.author.username : "Anonymous" %></h4>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> stars</p>
            <form action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" method="POST" novalidate class="needs-validation">
              <button class="btn btn-dark btn-sm mb-3">Delete</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>

  </div>
</div>